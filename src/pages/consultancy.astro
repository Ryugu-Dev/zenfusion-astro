---
import BaseLayout from "../layouts/BaseLayout.astro";
import Banner from "../components/Banner.astro";
import Contact from "../components/Contact.astro";
import {testimonials} from '../utils/data.js'
import HeroTestimonial from "../components/HeroTestimonial.astro";
import ChooseUs from "../components/ChooseUs.astro";
---

<BaseLayout>
    <Banner title="Consultancy" page="Consultancy"/>
    <!--===== ABOUT AREA STARTS =======-->
    <div class="about5-section-area sp1">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-3 col-md-6">
                    <div class="img1 image-anime">
                        <img src="/assets/img/testimonials-img/testimonials3.webp" alt="">
                    </div>
                    <div class="space30 d-md-none d-block"></div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="space20 d-lg-none d-block"></div>
                    <div class="img1 image-anime">
                        <img src="/assets/img/testimonials-img/testimonials1.webp" alt="">
                    </div>
                    <div class="space30"></div>
                    <div class="img1 image-anime">
                        <img src="/assets/img/testimonials-img/testimonials2.webp" alt="">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-header heading4">
                        <h5 data-aos="fade-left" data-aos-duration="800"><img src="/assets/img/icons/sub-logo1.svg"
                                                                              alt="">Testimonials</h5>
                        <div class="space16"></div>
                        <h2 class="text-anime-style-3">Voices of Success:<br>What They Say About Us</h2>
                        <div class="space20"></div>
                        <p data-aos="fade-left" data-aos-duration="1000">Hear from those who’ve experienced the
                            Place Waves difference! Our success is reflected in the journeys of job seekers and employers
                            we’ve supported. Discover how we’ve helped transform careers and optimize healthcare
                            practices.</p>
                        <ul data-aos="fade-left" data-aos-duration="1100">
                            <li><img src="/assets/img/icons/check1.svg" alt="">Transformed careers through tailored healthcare job training</li>
                            <li><img src="/assets/img/icons/check1.svg" alt="">Built confidence and skills with hands-on, practical programs.</li>
                            <li><img src="/assets/img/icons/check1.svg" alt="">Guided job seekers effortlessly through placements.</li>
                            <li><img src="/assets/img/icons/check1.svg" alt="">Opened doors to rewarding healthcare opportunities.</li>
                        </ul>
                        <div class="space32"></div>
                        <div class="btn-area" data-aos="fade-left" data-aos-duration="1200">
                            <a href="/about" class="header-btn2-h5">About More </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--===== ABOUT AREA ENDS =======-->
    <!--===== WORKS AREA STARTS =======-->
    <div class="choose3-section-area sp1">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="choose-header heading2 space-margin60">
                        <h5><img src="/assets/img/icons/sub-logo1.svg" alt="">Why Choose Us</h5>
                        <div class="space16"></div>
                        <h2 class="text-anime-style-3">Why Choose Rebuilders Construction Company?</h2>
                    </div>
                    <div class="images-area">
                        <div class="img1 image-anime">
                            <img src="/assets/img/all-images/choose/choose-img5.png" alt="">
                        </div>
                        <div class="img2 text-end image-anime">
                            <img src="/assets/img/all-images/choose/choose-img4.png" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="choose-pera-area heading2">
                        <p data-aos="fade-left" data-aos-duration="700">At Rebuilders Construction Company, we understand that choosing the right construction partner is crucial success of your project. Our commitment to quality, transparency,  client satisfaction sets us apart in the construction industry. Here’s why you should choose us for your next project.</p>
                        <div class="space60"></div>
                        <div class="list-area" data-aos="fade-left" data-aos-duration="800">
                            <div class="icons">
                                <img src="/assets/img/icons/choose4.svg" alt="">
                            </div>
                            <div class="content">
                                <a href="#">Experienced Professionals</a>
                                <div class="space16"></div>
                                <p>With years of experience in the construction industry, our team comprises highly skilled professionals who are passionate.</p>
                            </div>
                        </div>
                        <div class="space30"></div>
                        <div class="list-area" data-aos="fade-left" data-aos-duration="900">
                            <div class="icons">
                                <img src="/assets/img/icons/choose5.svg" alt="">
                            </div>
                            <div class="content">
                                <a href="#">High Quality Materials</a>
                                <div class="space16"></div>
                                <p>We believe that quality starts with the materials we use. That’s why we source only the highest quality materials for every project.</p>
                            </div>
                        </div>
                        <div class="space30"></div>
                        <div class="list-area" data-aos="fade-left" data-aos-duration="1000">
                            <div class="icons">
                                <img src="/assets/img/icons/choose6.svg" alt="">
                            </div>
                            <div class="content">
                                <a href="#">Timely Project Completion</a>
                                <div class="space16"></div>
                                <p>We understand the importance of completing projects on time. Our efficient project management processes and dedicated.</p>
                            </div>
                        </div>
                        <div class="space32"></div>
                        <div class="btn-area1" data-aos="fade-left" data-aos-duration="1200">
                            <a href="/services" class="header-btn2-h3">View Our Services <span><i class="fa-solid fa-arrow-right"></i></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--===== WORKS AREA ENDS =======-->
    <ChooseUs rowReverse/>
    <!--===== TESTIMONIAL AREA STARTS =======-->
    <div class="testimonial2-section-area sp1">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 m-auto">
                    <div class="testimonial-header text-center heading4 space-margin60">
                        <h5 data-aos="fade-left" data-aos-duration="800"><img src="/assets/img/icons/sub-logo1.svg"
                                                                              alt="">Testimonials</h5>
                        <div class="space16"></div>
                        <h2 class="text-anime-style-3">What Our Client Say’s About Place Waves </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="testimonial-slider-area owl-carousel">

                        {testimonials.map(ele =>
                                <HeroTestimonial text={ele.text} cliName={ele.cliName}/>)}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--===== TESTIMONIAL AREA ENDS =======-->
    <Contact />

</BaseLayout>