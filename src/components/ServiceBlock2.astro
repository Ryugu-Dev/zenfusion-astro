---
const {imgLink, navLink, service, info} = Astro.props
---
<div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-duration="800">
    <div class="service3-boxarea">
        <div class="img1 image-anime">
            <img src={imgLink} alt="" class="service-img7">
            <img src="/assets/img/elements/elements2.png" alt="" class="elements2">
        </div>
        <div class="content-area">
            <a href={navLink}>{service}</a>
            <div class="space16"></div>
            <p>{info}</p>
            <div class="space20"></div>
            <a href={navLink} class="readmore">Read More <i class="fa-solid fa-arrow-right"></i></a>
        </div>
    </div>
</div>